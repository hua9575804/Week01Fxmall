<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!--servlet配置-->
  <!--GoodsServlet-->
  <servlet>
    <servlet-name>GoodsServlet</servlet-name>
    <servlet-class>com.qianfeng.fxmall.goods.controller.GoodsServlet</servlet-class>
  </servlet>
  <!--GoodsCopyServlet-->
  <servlet>
    <servlet-name>GoodsCopyServlet</servlet-name>
    <servlet-class>com.qianfeng.fxmall.goods.controller.GoodsCopyServlet</servlet-class>
  </servlet>
  <!--对应配置.do-->
  <servlet-mapping>
    <servlet-name>GoodsServlet</servlet-name>
    <url-pattern>/goods.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GoodsCopyServlet</servlet-name>
    <url-pattern>/goodsCopy.do</url-pattern>
  </servlet-mapping>
</web-app>
